---
interface Props {
  churchName?: string;
}

const { churchName = 'Our Church' } = Astro.props;
---

<header class="sticky top-0 z-50 border-b border-slate-800/80 bg-slate-950/80 backdrop-blur-lg">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center gap-3 text-white no-underline">
      <!-- simple cross icon -->
      <svg class="h-8 w-8 text-cyan-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 2v20M2 12h20" />
      </svg>
      <span class="text-lg font-bold tracking-tight">{churchName}</span>
    </a>

    <nav class="hidden items-center gap-8 text-sm font-medium text-slate-300 md:flex">
      <a href="/#sermons" class="transition hover:text-white">Sermons</a>
      <a href="/#events" class="transition hover:text-white">Events</a>
      <a href="/#news" class="transition hover:text-white">News</a>
    </nav>

    <!-- mobile hamburger (CSS-only toggle) -->
    <button id="mobile-menu-btn" class="text-slate-300 md:hidden" aria-label="Open menu">
      <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- mobile dropdown -->
  <nav id="mobile-menu" class="hidden border-t border-slate-800 bg-slate-950 px-6 pb-4 md:hidden">
    <a href="/#sermons" class="block py-2 text-slate-300 transition hover:text-white">Sermons</a>
    <a href="/#events" class="block py-2 text-slate-300 transition hover:text-white">Events</a>
    <a href="/#news" class="block py-2 text-slate-300 transition hover:text-white">News</a>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>
