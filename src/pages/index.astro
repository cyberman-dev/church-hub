---
import Layout from '../layouts/Layout.astro';
import { sanityClient } from 'sanity:client';

/* ── Types ─────────────────────────────────────────────── */

type Settings = {
  churchName?: string;
  socialMedia?: {
    facebook?: string;
    instagram?: string;
    twitter?: string;
    youtube?: string;
    tiktok?: string;
  };
};

type Announcement = {
  _id: string;
  title: string;
  bodyPlain?: string;       // pt::text() flattened
  isFeatured?: boolean;
  _createdAt: string;
};

type ChurchEvent = {
  _id: string;
  name: string;
  dateTime: string;
  location?: string;
  registrationLink?: string;
};

type Sermon = {
  _id: string;
  title: string;
  slug?: { current?: string };
  videoUrl?: string;
  topics?: string[];
  spotifyPlaylist?: string;
  _createdAt: string;
};

/* ── GROQ Queries ──────────────────────────────────────── */

const settingsQuery = `*[_type == "settings"][0]{
  churchName,
  socialMedia
}`;

const featuredAnnouncementQuery = `*[_type == "announcement" && isFeatured == true] | order(_createdAt desc)[0]{
  _id,
  title,
  "bodyPlain": pt::text(body),
  isFeatured,
  _createdAt
}`;

const recentAnnouncementsQuery = `*[_type == "announcement"] | order(_createdAt desc)[0...3]{
  _id,
  title,
  "bodyPlain": pt::text(body),
  isFeatured,
  _createdAt
}`;

const upcomingEventsQuery = `*[_type == "event" && dateTime >= now()] | order(dateTime asc)[0...3]{
  _id,
  name,
  dateTime,
  location,
  registrationLink
}`;

const sermonsQuery = `*[_type == "sermon"] | order(_createdAt desc)[0...3]{
  _id,
  title,
  slug,
  videoUrl,
  topics,
  spotifyPlaylist,
  _createdAt
}`;

/* ── Fetch all data in parallel ───────────────────────── */

const [settings, featuredAnnouncement, announcements, events, sermons] = await Promise.all([
  sanityClient.fetch<Settings>(settingsQuery),
  sanityClient.fetch<Announcement | null>(featuredAnnouncementQuery),
  sanityClient.fetch<Announcement[]>(recentAnnouncementsQuery),
  sanityClient.fetch<ChurchEvent[]>(upcomingEventsQuery),
  sanityClient.fetch<Sermon[]>(sermonsQuery),
]);

const churchName = settings?.churchName ?? 'Our Church';

/* Helper: truncate text */
function truncate(text: string | undefined, max = 120): string {
  if (!text) return '';
  return text.length > max ? text.slice(0, max).trimEnd() + '…' : text;
}
---

<Layout title="Home" churchName={churchName} socialMedia={settings?.socialMedia}>
  <main>

    <!-- ════════════════════════════════════════════════════
         HERO – Featured Announcement Banner
         ════════════════════════════════════════════════════ -->
    <section class="relative overflow-hidden bg-gradient-to-br from-slate-950 via-slate-900 to-cyan-950 px-6 py-24 md:py-32">
      <!-- subtle decorative circles -->
      <div class="pointer-events-none absolute -right-32 -top-32 h-96 w-96 rounded-full bg-cyan-500/10 blur-3xl"></div>
      <div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl"></div>

      <div class="relative mx-auto max-w-5xl text-center">
        <p class="mb-4 text-sm font-semibold uppercase tracking-[0.25em] text-cyan-300">{churchName}</p>

        {featuredAnnouncement ? (
          <div>
            <h1 class="mx-auto max-w-3xl text-4xl font-extrabold leading-tight text-white md:text-6xl">
              {featuredAnnouncement.title}
            </h1>
            {featuredAnnouncement.bodyPlain && (
              <p class="mx-auto mt-6 max-w-2xl text-lg leading-relaxed text-slate-300">
                {truncate(featuredAnnouncement.bodyPlain, 200)}
              </p>
            )}
            <div class="mt-8 flex flex-wrap justify-center gap-4">
              <a href="#sermons" class="rounded-xl bg-cyan-500 px-6 py-3 font-semibold text-slate-950 shadow-lg shadow-cyan-500/25 transition hover:bg-cyan-400">
                Watch Latest Sermon
              </a>
              <a href="#events" class="rounded-xl border border-slate-600 px-6 py-3 font-semibold text-slate-200 transition hover:border-slate-400 hover:text-white">
                Upcoming Events
              </a>
            </div>
          </div>
        ) : (
          <div>
            <h1 class="mx-auto max-w-3xl text-4xl font-extrabold leading-tight text-white md:text-6xl">
              Welcome Home
            </h1>
            <p class="mx-auto mt-6 max-w-2xl text-lg leading-relaxed text-slate-300">
              Join us every Sunday as we grow in faith, community, and love.
            </p>
            <div class="mt-8 flex flex-wrap justify-center gap-4">
              <a href="#sermons" class="rounded-xl bg-cyan-500 px-6 py-3 font-semibold text-slate-950 shadow-lg shadow-cyan-500/25 transition hover:bg-cyan-400">
                Watch Latest Sermon
              </a>
              <a href="#events" class="rounded-xl border border-slate-600 px-6 py-3 font-semibold text-slate-200 transition hover:border-slate-400 hover:text-white">
                Upcoming Events
              </a>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- ════════════════════════════════════════════════════
         LATEST SERMONS
         ════════════════════════════════════════════════════ -->
    <section id="sermons" class="px-6 py-20 md:px-10">
      <div class="mx-auto max-w-7xl">
        <div class="mb-10 flex flex-col gap-2">
          <p class="text-sm font-semibold uppercase tracking-[0.2em] text-cyan-300">Media</p>
          <h2 class="text-3xl font-bold text-white md:text-4xl">Latest Sermons</h2>
        </div>

        {sermons.length === 0 ? (
          <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-8 text-slate-400">
            No sermons published yet. Check back soon!
          </div>
        ) : (
          <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
            {sermons.map((sermon) => (
              <article class="group flex flex-col rounded-2xl border border-slate-800 bg-slate-900/70 p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:border-cyan-400/60 hover:shadow-cyan-500/10">
                <p class="mb-3 text-xs font-medium uppercase tracking-[0.15em] text-slate-500">
                  {new Date(sermon._createdAt).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                </p>

                <h3 class="mb-4 text-xl font-semibold text-white">{sermon.title}</h3>

                <div class="mb-5 flex flex-wrap gap-2">
                  {(sermon.topics ?? []).slice(0, 3).map((topic) => (
                    <span class="rounded-full border border-cyan-500/40 bg-cyan-500/10 px-3 py-1 text-xs font-medium text-cyan-200">
                      {topic}
                    </span>
                  ))}
                </div>

                <div class="mt-auto flex flex-wrap gap-3 text-sm">
                  {sermon.videoUrl && (
                    <a
                      href={sermon.videoUrl}
                      target="_blank"
                      rel="noreferrer"
                      class="rounded-lg bg-cyan-500 px-4 py-2 font-semibold text-slate-950 transition hover:bg-cyan-400"
                    >
                      Watch
                    </a>
                  )}
                  {sermon.spotifyPlaylist && (
                    <a
                      href={sermon.spotifyPlaylist}
                      target="_blank"
                      rel="noreferrer"
                      class="rounded-lg border border-slate-700 px-4 py-2 font-medium text-slate-200 transition hover:border-slate-500 hover:text-white"
                    >
                      Playlist
                    </a>
                  )}
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>

    <!-- ════════════════════════════════════════════════════
         UPCOMING EVENTS
         ════════════════════════════════════════════════════ -->
    <section id="events" class="border-t border-slate-800/60 bg-slate-900/40 px-6 py-20 md:px-10">
      <div class="mx-auto max-w-7xl">
        <div class="mb-10 flex flex-col gap-2">
          <p class="text-sm font-semibold uppercase tracking-[0.2em] text-cyan-300">Get Involved</p>
          <h2 class="text-3xl font-bold text-white md:text-4xl">Upcoming Events</h2>
        </div>

        {events.length === 0 ? (
          <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-8 text-slate-400">
            No upcoming events right now. Stay tuned!
          </div>
        ) : (
          <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
            {events.map((evt) => {
              const d = new Date(evt.dateTime);
              const month = d.toLocaleDateString('en-US', { month: 'short' }).toUpperCase();
              const day = d.getDate();
              const time = d.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });

              return (
                <article class="group flex gap-5 rounded-2xl border border-slate-800 bg-slate-900/70 p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:border-cyan-400/60 hover:shadow-cyan-500/10">
                  {/* Date badge */}
                  <div class="flex h-16 w-16 shrink-0 flex-col items-center justify-center rounded-xl bg-cyan-500/15 text-cyan-300">
                    <span class="text-[10px] font-bold uppercase tracking-widest">{month}</span>
                    <span class="text-2xl font-extrabold leading-none">{day}</span>
                  </div>

                  <div class="flex flex-col">
                    <h3 class="text-lg font-semibold text-white">{evt.name}</h3>
                    <p class="mt-1 text-sm text-slate-400">{time}{evt.location ? ` · ${evt.location}` : ''}</p>
                    {evt.registrationLink && (
                      <a
                        href={evt.registrationLink}
                        target="_blank"
                        rel="noreferrer"
                        class="mt-3 inline-flex w-fit items-center gap-1 text-sm font-medium text-cyan-400 transition hover:text-cyan-300"
                      >
                        Register
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                      </a>
                    )}
                  </div>
                </article>
              );
            })}
          </div>
        )}
      </div>
    </section>

    <!-- ════════════════════════════════════════════════════
         RECENT NEWS / ANNOUNCEMENTS
         ════════════════════════════════════════════════════ -->
    <section id="news" class="px-6 py-20 md:px-10">
      <div class="mx-auto max-w-7xl">
        <div class="mb-10 flex flex-col gap-2">
          <p class="text-sm font-semibold uppercase tracking-[0.2em] text-cyan-300">Stay Informed</p>
          <h2 class="text-3xl font-bold text-white md:text-4xl">Recent News</h2>
        </div>

        {announcements.length === 0 ? (
          <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-8 text-slate-400">
            No announcements yet. Check back soon!
          </div>
        ) : (
          <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
            {announcements.map((a) => (
              <article class="group flex flex-col rounded-2xl border border-slate-800 bg-slate-900/70 p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:border-cyan-400/60 hover:shadow-cyan-500/10">
                <p class="mb-2 text-xs font-medium uppercase tracking-[0.15em] text-slate-500">
                  {new Date(a._createdAt).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                </p>

                <h3 class="mb-3 text-xl font-semibold text-white">
                  {a.isFeatured && (
                    <span class="mr-2 inline-block rounded bg-cyan-500/20 px-2 py-0.5 align-middle text-xs font-bold uppercase text-cyan-300">
                      Featured
                    </span>
                  )}
                  {a.title}
                </h3>

                {a.bodyPlain && (
                  <p class="text-sm leading-relaxed text-slate-400">
                    {truncate(a.bodyPlain)}
                  </p>
                )}
              </article>
            ))}
          </div>
        )}
      </div>
    </section>

  </main>
</Layout>
