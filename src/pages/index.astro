---
import Layout from '../layouts/Layout.astro'
import {sanityClient} from 'sanity:client'

type Sermon = {
  _id: string
  title: string
  slug?: {current?: string}
  videoUrl?: string
  topics?: string[]
  spotifyPlaylist?: string
  _createdAt: string
}

const sermons = await sanityClient.fetch<Sermon[]>(
  `*[_type == "sermon"] | order(_createdAt desc)[0...3]{
    _id,
    title,
    slug,
    videoUrl,
    topics,
    spotifyPlaylist,
    _createdAt
  }`
)
---

<Layout>
  <main class="min-h-screen bg-slate-950 px-6 py-16 text-slate-100 md:px-10">
    <section class="mx-auto max-w-6xl">
      <header class="mb-10 flex flex-col gap-4 md:mb-12">
        <p class="text-sm font-semibold uppercase tracking-[0.2em] text-cyan-300">Grace Church</p>
        <h1 class="max-w-3xl text-4xl font-bold leading-tight md:text-5xl">Latest Sermons</h1>
      </header>

      {
        sermons.length === 0 ? (
          <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-8 text-slate-300">
            No sermons published yet.
          </div>
        ) : (
          <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
            {sermons.map((sermon) => (
              <article class="group rounded-2xl border border-slate-800 bg-slate-900/70 p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:border-cyan-400/60 hover:shadow-cyan-500/10">
                <p class="mb-3 text-xs font-medium uppercase tracking-[0.15em] text-slate-400">
                  {new Date(sermon._createdAt).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric',
                  })}
                </p>

                <h2 class="mb-4 text-2xl font-semibold text-white">{sermon.title}</h2>

                <div class="mb-5 flex flex-wrap gap-2">
                  {(sermon.topics ?? []).slice(0, 3).map((topic) => (
                    <span class="rounded-full border border-cyan-500/40 bg-cyan-500/10 px-3 py-1 text-xs font-medium text-cyan-200">
                      {topic}
                    </span>
                  ))}
                </div>

                <div class="flex flex-wrap gap-3 text-sm">
                  {sermon.videoUrl && (
                    <a
                      href={sermon.videoUrl}
                      target="_blank"
                      rel="noreferrer"
                      class="rounded-lg bg-cyan-500 px-4 py-2 font-semibold text-slate-950 transition hover:bg-cyan-400"
                    >
                      Watch Sermon
                    </a>
                  )}
                  {sermon.spotifyPlaylist && (
                    <a
                      href={sermon.spotifyPlaylist}
                      target="_blank"
                      rel="noreferrer"
                      class="rounded-lg border border-slate-700 px-4 py-2 font-medium text-slate-200 transition hover:border-slate-500 hover:text-white"
                    >
                      Worship Playlist
                    </a>
                  )}
                </div>
              </article>
            ))}
          </div>
        )
      }
    </section>
  </main>
</Layout>
